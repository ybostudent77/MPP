<p style="color: green"><%= notice %></p>

<h1>Specializations</h1>
<body id="specializations" style="background: black; color: chartreuse" >
<%= form_with(url: specializations_path, method: :get) do |form| %>
  <%= form.text_field :query, placeholder: 'Search specialization' %>
  <%= form.submit 'Search' %>
<% end %>

<div id="specializations">
  <% @specializations.each do |specialization| %>
    <%= render specialization %>
    <p>
      <%= link_to "Show this specialization", specialization %>
    </p>
  <% end %>

  <%= will_paginate @specializations %>
</div>

<%= link_to "New specialization", new_specialization_path %>

<p>
  Sort by:
  <%= link_to 'Name (asc)', { sort_field: 'name', sort_direction: 'asc' } %>
  <%= link_to 'Name (desc)', { sort_field: 'name', sort_direction: 'desc' } %>
  <%= link_to 'Created at (asc)', { sort_field: 'created_at', sort_direction: 'asc' } %>
  <%= link_to 'Created at (desc)', { sort_field: 'created_at', sort_direction: 'desc' } %>
</p>
</body>